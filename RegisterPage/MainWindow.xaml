<Window x:Class="RegisterPage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegisterPage"
        mc:Ignorable="d"
        Title="Register" FontSize="20" Height="800" Width="600">
    <Border Padding="20" Margin="0 0 0 0">
        <StackPanel Margin="10 0 10 0">
            <TextBlock Text="Please provide your file information." FontSize="30"
                       Foreground="Red"/>
            <TextBlock Text="E-mail Address*" FontWeight="Bold"
                       Margin="0 10 0 0"/>
            <TextBox Height="25" Margin="0 5 10 0"/>
        </StackPanel>
    </Border>
</Window>
